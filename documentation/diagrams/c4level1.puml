@startuml
!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Context.puml

title System Context Diagram for Soccer Jerseys Ordering System

Person(customer, "Customer", "A customer looking to purchase soccer jerseys")
Person(employee, "Employee", "Employee managing the jersey orders and inventory")
System(orders_system, "Soccer Jerseys Ordering System", "Allows customers to order soccer jerseys and employees to manage the orders and inventory")

Rel(customer, orders_system, "Places orders using", "Web interface/API")
Rel(employee, orders_system, "Manages orders and inventory", "Web interface/API")

SHOW_LEGEND()
@enduml



